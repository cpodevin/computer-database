<?xml version = "1.0" encoding = "utf-8"?>
<!DOCTYPE hibernate-mapping PUBLIC 
"-//Hibernate/Hibernate Mapping DTD//EN"
"http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd"> 

<hibernate-mapping>
	<class name="com.excilys.cdb.model.Computer" table="computer">

		<id name="id" type="int" column="id">
			<generator class="identity" />
		</id>

		<property name="name" column="name" type="string" />
		<property name="introduced" column="introduced" type="date" />
		<property name="discontinued" column="discontinued" type="date" />
		<many-to-one name="company" column = "company_id" class="com.excilys.cdb.model.Company"/>
	</class>
</hibernate-mapping>